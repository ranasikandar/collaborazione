@{
    Layout = "_LayoutBlank";
    ViewBag.Title = "Access Denied";
}

<div class="page-content-wrapper py-3">
    <div class="container">
        <div class="card">
            <div class="card-body px-5 text-center">

                <img class="mb-4" src="~/img/logo.png" asp-append-version="true" alt="Access Denied">

                <h3>Access Denied</h3>

                @if (ViewBag.ErrorTitle != null || ViewBag.ErrorMessage != null)
                {
                    <h3>@ViewBag.ErrorTitle</h3>
                    <span>@ViewBag.ErrorMessage</span>
                    <span>@ViewBag.ErrorDetail</span>

                }

                <div class="text-center mb-4">
                    <a class="btn m-2 btn-creative btn-success" asp-action="Index" asp-controller="User">Go To Home Page</a>
                    <a href="javascript:history.back()" class="btn m-2 btn-creative btn-danger">Go Back</a>
                </div>

            </div>
        </div>
    </div>
</div>