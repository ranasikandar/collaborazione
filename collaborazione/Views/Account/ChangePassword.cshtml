@model ChangePasswordViewModel

@{
    //Layout = "_LayoutBlank";
    ViewBag.Title = "Change Password";
}

<div class="page-content-wrapper py-3">
    <div class="container">
        <div class="card">
            <div class="card-body px-5 text-center">
                <img class="mb-4" src="~/img/login_pwd.png" asp-append-version="true" alt="Change Password">
                <h3>Change Password</h3>
                <div asp-validation-summary="All">
                    <div class="alert custom-alert-1 alert-warning alert-dismissible fade show msgtitle" role="alert">
                        <i class="bi bi-exclamation-circle"></i>Please Fix the Following Errors
                    </div>
                </div>
                <form asp-action="ChangePassword" asp-controller="Account" method="post">
                    <div class="form-group text-start mb-3 mt-3">
                        <input asp-for="OldPassword" placeholder="Old password" class="form-control">
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group text-start mb-3">
                        <input asp-for="NewPassword" placeholder="New Password" class="form-control">
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group text-start mb-3">
                        <input asp-for="ConfirmPassword" placeholder="Re-enter Password" class="form-control">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button class="btn btn-primary w-100" id="btnChangePwd" value="changePwd" type="submit"><span>Change Password</span></button>
                </form>
            </div>
        </div>
    </div>
</div>