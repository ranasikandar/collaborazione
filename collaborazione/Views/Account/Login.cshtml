@model LoginViewModel
@inject IConfiguration _config;

@{
    Layout = "_LayoutBlank";
    ViewBag.Title = "Login";
}


<div class="login-wrapper d-flex align-items-center justify-content-center">
    <div class="custom-container">
        <div class="text-center px-4"><img class="login-intro-img" src="~/img/login_pwd.png" asp-append-version="true" alt="login"></div>
        <div class="register-form mt-4">
            <h6 class="mb-3 text-center">Login to @_config["AppName"]</h6>

            <div asp-validation-summary="All">
                <div class="alert custom-alert-1 alert-warning alert-dismissible fade show msgtitle" role="alert">
                    <i class="bi bi-exclamation-circle"></i>Please Fix the Following Errors
                </div>
            </div>

            @{ if (ViewBag.ViewMsgAlert != null)
                {
                    <div class="alert custom-alert-1 alert-info alert-dismissible fade show">
                        <i class="bi bi-info-circle"></i>@ViewBag.ViewMsgAlert
                    </div>
                }}

            <form asp-action="Login" asp-controller="Account" asp-route-ReturnUrl="@Model.ReturnUrlL" method="post">
                <div class="form-group text-start mb-3 mt-3">
                    <input asp-for="EmailL" placeholder="Email Address" class="form-control">
                    <span asp-validation-for="EmailL" class="text-danger"></span>
                </div>
                @*<div class="form-group text-start mb-3">
                <input class="form-control input-psswd" id="registerPassword" type="password" placeholder="New Password">
            </div>*@
                <div class="form-group text-start mb-3">
                    <input asp-for="PasswordL" placeholder="Password" class="form-control">
                    <span asp-validation-for="PasswordL" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="RememberMe">
                    <label class="form-check-label text-muted fw-normal" asp-for="RememberMe"></label>
                </div>
                <button class="btn btn-primary w-100" id="btnLogin" value="login" type="submit"><span>Login</span></button>
            </form>
        </div>
        <div class="login-meta-data text-center">
            <p class="mt-3 mb-0">Don't have an Account? <a class="stretched-link" asp-action="Register" asp-controller="Account">Register</a></p>
            <p class="mt-3 mb-0">Forgot Password? <a class="stretched-link" asp-action="ForgotPassword" asp-controller="Account">Reset Password</a></p>
        </div>
    </div>
</div>
