@model RegisterViewModel
@inject IConfiguration _config;

@{
    Layout = "_LayoutBlank";
    ViewBag.Title = "Register";
}

<div class="login-wrapper d-flex align-items-center justify-content-center">
    <div class="custom-container">
        <div class="text-center px-4"><img class="login-intro-img" src="~/img/login_pwd.png" asp-append-version="true" alt="login"></div>
        <div class="register-form mt-4">
            <h6 class="mb-3 text-center">Register to continue to @_config["AppName"]</h6>

            <div asp-validation-summary="All">
            <div class="alert custom-alert-1 alert-warning alert-dismissible fade show msgtitle" role="alert">
                <i class="bi bi-exclamation-circle"></i>Please Fix the Following Errors
            </div>
        </div>

            <form asp-action="Register" asp-controller="Account" method="post">
                <div class="form-group text-start mb-3 mt-3">
                    <input class="form-control" asp-for="NameR" placeholder="Name">
                    <span asp-validation-for="NameR" class="text-danger"></span>
                </div>
                <div class="form-group text-start mb-3">
                    <input asp-for="EmailR" placeholder="Email Address" class="form-control">
                    <span asp-validation-for="EmailR" class="text-danger"></span>
                </div>
                @*<div class="form-group text-start mb-3">
            <input class="form-control input-psswd" id="registerPassword" type="password" placeholder="New Password">
        </div>*@
                <div class="form-group text-start mb-3">
                    <input asp-for="PasswordR" placeholder="New password" class="form-control">
                    <span asp-validation-for="PasswordR" class="text-danger"></span>
                </div>
                <div class="form-group text-start mb-3">
                    <input asp-for="ConfirmPasswordR" placeholder="Re-enter Password" class="form-control">
                    <span asp-validation-for="ConfirmPasswordR" class="text-danger"></span>
                </div>
                <div class="form-group text-start mb-3">
                    <input asp-for="InvitedBy" placeholder="Invited By" class="form-control">
                    <span asp-validation-for="InvitedBy" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="AgreePrivacyPolicyTerms">
                    <label class="form-check-label text-muted fw-normal" asp-for="AgreePrivacyPolicyTerms"></label>
                    @*<br />*@
                    <a id="loadTerms" class="clickPointer">Terms</a> / <a id="loadPrivacyPolicy" class="clickPointer"> Privacy Policy</a>
                </div>
                <button class="btn btn-primary w-100" id="btnRegister" value="register" type="submit"><span>Register Now</span></button>
            </form>
        </div>
        <div class="login-meta-data text-center">
            <p class="mt-3 mb-0">Already have an account? <a class="stretched-link" asp-action="Login" asp-controller="Account">Login</a></p>
        </div>
    </div>
</div>

@section Scripts{

    <script type="text/javascript">
        $(function () {
            intRegPG();
        });
    </script>
}