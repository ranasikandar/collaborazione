@model NotifyViewModel
@{
    ViewData["Title"] = "Notify";
}

<h1>Send Push Notifications</h1>
@if (!Model.Users.Any())
{
    <p>There are no active subscribers</p>
}
else
{
<div class="page-content-wrapper py-3">
    <div class="container">
        <form asp-action="Notify" method="post">

            <div class="form-group text-start mb-4">
                <label class="form-label" asp-for="Message"></label>
                <textarea asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label class="form-label" asp-for="SelectedUser"></label>
                <select class="form-select selectpicker" asp-for="SelectedUser" asp-items="@(new SelectList(Model.Users,"Id","Name"))" size="6" multiple>
                    @*<option value="">Please Select</option>*@
                </select>
                <span asp-validation-for="SelectedUser" class="text-danger"></span>
            </div>

            <div asp-validation-summary="All">
                <div class="alert custom-alert-1 alert-warning alert-dismissible fade show msgtitle" role="alert">
                    <i class="bi bi-exclamation-circle"></i>Please Fix the Following Errors
                </div>
            </div>

            <button class="btn btn-primary w-100" id="btnSendPush" value="sendPush" type="submit"><span>Send Push Notification</span></button>
        </form>
    </div>
</div>
}
